<section class="module-small p-t-20 p-b-60">

  <div class="container">

    <!-- PORTFOLIO FILTER -->
    <div class="row">
      <div class="col-sm-12">

        <ul id="filters" class="filter font-inc hidden-xs">
          <li><a href="#" data-filter=".manager" class="wow fadeInUp" data-wow-delay="0.2s">Managers</a></li>
          <li><a href="#" data-filter=".finance" class="wow fadeInUp" data-wow-delay="0.4s">Finances</a></li>
          <li><a href="#" data-filter=".draft" class="wow fadeInUp" data-wow-delay="0.6s">Draft</a></li>
          <li><a href="#" data-filter=".news" class="wow fadeInUp" data-wow-delay="0.8s">NFL News</a></li>
          <li><a href="#" data-filter="*" class="wow fadeInUp" data-wow-delay="0.8s">All</a></li>
        </ul>

      </div>
    </div>
    <!-- /PORTFOLIO FILTER -->

    <!-- PORTFOLIO LIST -->
    <ul id="works-grid" class="works-grid works-grid-gut works-grid-3 works-hover-w">

      <!-- PORTFOLIO ITEM -->
      <% if !@league.commissioner.due %>
      <li class="work-item finance">
         <%= link_to new_league_due_path(@league) do %>
          <div class="work-image">
            <img id = "tile" src="https://pbs.twimg.com/media/CBOuWhBUkAENRiA.jpg" alt="">
          </div>
          <div class="work-caption">
            <h3 class="work-title font-alt">Set League Dues</h3>
            <div class="work-descr font-inc">
              Set the Dues Amount for League Managers
            </div>
          </div>
        <% end %>
      </li>
      <% end %>
      <!-- /PORTFOLIO ITEM -->

      <!-- PORTFOLIO ITEM -->
      <li class="work-item manager">
        <%= link_to league_managers_path(@league), remote: true do %>
          <div class="work-image">
            <img id="tile" src="https://pbs.twimg.com/media/CBZIQHHWgAAIBk0.jpg:large" alt="">
          </div>
          <div class="work-caption">
            <h3 class="work-title font-alt">
              <% if @league.managers.count == 0 %>
              Add Managers
              </h3>
            <div class="work-descr font-inc">
              Add managers to <%= @league.name %>
            </div>
            <% else %>
            View Managers
            </h3>
          <div class="work-descr font-inc">
            Edit, Delete, and communicate with managers in <%= @league.name %>
          </div>
          <% end %>
          </div>
        <% end %>
      </li>
      <!-- /PORTFOLIO ITEM -->

      <!-- PORTFOLIO ITEM -->
      <li class="work-item finance">
        <%= link_to league_dues_path(@league) do %>
          <div class="work-image">
            <img id = "tile" src="https://pbs.twimg.com/media/CBZHHaIVAAANnlV.jpg" alt="">
          </div>
          <div class="work-caption">
            <h3 class="work-title font-alt">League Finances</h3>
            <div class="work-descr font-inc">
              See who has paid league dues
            </div>
          </div>
        <% end %>
      </li>
      <!-- /PORTFOLIO ITEM -->

      <!-- PORTFOLIO ITEM -->
      <li class="work-item manager">
        <%= link_to league_email_path(@league), remote: true do %>
          <div class="work-image">
            <img id = "tile" src="https://pbs.twimg.com/media/CBJZqrfWgAAzPOp.jpg:large" alt="">
          </div>
          <div class="work-caption">
            <h3 class="work-title font-alt">Email Entire League</h3>
            <div class="work-descr font-inc">
              Draft and send league emails
            </div>
          </div>
        <% end %>
      </li>
      <!-- /PORTFOLIO ITEM -->

      <!-- PORTFOLIO ITEM -->
      <li class="work-item news">
        <%= link_to headlines_path do %>
          <div class="work-image">
            <img id = "tile" src="https://pbs.twimg.com/media/CBI7ztQU0AARigs.jpg" alt="">
          </div>
          <div class="work-caption">
            <h3 class="work-title font-alt">NFL News</h3>
            <div class="work-descr font-inc">
              Bleacher Report Headlines
            </div>
          </div>
        <% end %>
      </li>
      <!-- /PORTFOLIO ITEM -->

      <!-- PORTFOLIO ITEM -->
      <li class="work-item draft">
        <%= link_to drafts_path do %>
          <div class="work-image">
            <img id = "tile"  src="https://pbs.twimg.com/media/CA_LuoGUYAEq-sm.jpg" alt="">
          </div>
          <div class="work-caption">
            <h3 class="work-title font-alt">Schedule Draft</h3>
            <div class="work-descr font-inc">
              Draft
            </div>
          </div>
        </a>
        <% end %>
      </li>
      <!-- /PORTFOLIO ITEM -->

      <!-- PORTFOLIO ITEM -->
      <li class="work-item finance">
        <a href="portfolio-single-1.html">
          <div class="work-image">
            <img id = "tile" src="https://pbs.twimg.com/media/CBZFRwnUYAAX8F2.jpg" alt="">
          </div>
          <div class="work-caption">
            <h3 class="work-title font-alt">Text Non-Payers</h3>
            <div class="work-descr font-inc">
              Remind your non-paying members
            </div>
          </div>
        </a>
      </li>
      <!-- /PORTFOLIO ITEM -->

      <!-- PORTFOLIO ITEM -->
      <li class="work-item manager">
        <a href="portfolio-single-1.html">
          <div class="work-image">
            <img id = "tile" src="https://pbs.twimg.com/media/CBZEQ4gWgAEdYR1.jpg" alt="">
          </div>
          <div class="work-caption">
            <h3 class="work-title font-alt">Set lineup reminder</h3>
            <div class="work-descr font-inc">
              Schedule reminder text for your managers to set-lineups
            </div>
          </div>
        </a>
      </li>
      <!-- /PORTFOLIO ITEM -->
    </ul>
    <!-- /PORTFOLIO LIST -->

  </div>

</section>
<!-- /PORTFOLIO -->

<!-- FOOTER -->

<%= render "layouts/footer" %>
<!-- /FOOTER -->
