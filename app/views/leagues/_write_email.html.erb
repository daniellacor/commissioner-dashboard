<div class="container">

  <!-- PORTFOLIO FILTER -->
  <div class="row">
    <div class="col-sm-12">

      <ul id="filters" class="filter font-inc hidden-xs">
        <li><%= link_to 'Add Managers', new_league_manager_path(@league), remote: true %></li>
        <li><%= link_to 'Email Managers', league_email_path(@league), remote: true %></li>
        <li><a href="#" data-filter=".draft" class="wow fadeInUp" data-wow-delay="0.6s">Manager Dues</a></li>
        <li><a href="#" data-filter="*" class="wow fadeInUp" data-wow-delay="0.8s">Back</a></li>
      </ul>

    </div>
  </div>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2" id="main-panel">
        <h2 class="work-details-title font-alt">Email League</h2>
        <%= form_tag league_send_email_path(@league), {remote: true} do %>
         <div class="form-group">
            <%= text_field_tag :subject, nil, class: "form-control input-lg", placeholder: "Subject" %>
         </div>
         <div class="form-group">
           <%= text_area_tag :content, nil, class: "form-control input-lg", placeholder: "Message", rows: 10  %>
         </div>
           <%= submit_tag "Send Email", class: "btn btn-d btn-circle btn-lg", remote: true %>
         <% end %>
         </div>
      <!-- POST WITH IMAGE -->

    </div>
  </div>
</div>
</div>
