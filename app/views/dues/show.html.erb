<div class="wrapper">

  <%= render partial: "leagues/dashboard_jumbotron", locals: {league: @due.league} %>

   <section class="module-small">

     <div class="container">
       <div class="row">
         <div class="col-sm-6">
           <div class="work-details">
             <h1>League Finances</h1>

             <h3>League Pot: <%=  %></h3>

             <% total = 0  %>
             <h3>Total Collected: $
                  <% league.managers.each do |manager|  %>
                    <% total += manager.due.amount  %>
                  <% end  %>
                  <%= total %>
             </h3>

             <h3>Buy In: $<%= @due.amount %></h3>

             <h1>League</h1>


           </div>
       </div>
     </div>
   </div>

   </section>
