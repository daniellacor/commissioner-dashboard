<div class="work-details">
  <h2 class="work-details-title font-alt">Email <%= @manager.name %></h2>
  <%= form_tag send_email_path, {remote: true} do %>
   <div class="form-group">
      <%= text_field_tag :subject, nil, class: "form-control input-lg", placeholder: "Subject" %>
   </div>
   <div class="form-group">
     <%= text_area_tag :content, nil, class: "form-control input-lg", placeholder: "Message", rows: 10  %>
   </div>
     <%= submit_tag "Send Email", class: "btn btn-d btn-circle btn-lg", remote: true %>
   <% end %>
   </div>
