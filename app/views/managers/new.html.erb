<!-- WRAPPER -->
<div class="wrapper">

  <!-- HOME -->
  <%= render partial: "leagues/dashboard_jumbotron", locals: {league: @league} %>
   <!-- /HOME -->
   <!-- PORTFOLIO DESCRIPTION -->
   <section class="module-small">

     <div class="container">
       <!-- PORTFOLIO FILTER -->
       <div class="row">
         <div class="col-sm-12">

           <ul id="filters" class="filter font-inc hidden-xs">
             <li><a href="#" data-filter=".manager" class="wow fadeInUp" data-wow-delay="0.2s">Add Managers</a></li>
             <li><a href="#" data-filter=".finance" class="wow fadeInUp" data-wow-delay="0.4s">Email Managers</a></li>
             <li><a href="#" data-filter=".draft" class="wow fadeInUp" data-wow-delay="0.6s">Manager Dues</a></li>
             <li><a href="#" data-filter="*" class="wow fadeInUp" data-wow-delay="0.8s">Back</a></li>
           </ul>

         </div>
       </div>
     <div class="container">

       <div class="row">

         <div class="col-sm-6" id="main-panel">


        <%= render partial: "managers/managers" %>

           </div>

         </div>

         <div class="col-sm-6" id="side-panel">

           <div class="work-details">
             <h3 class="work-details-title font-alt">Add Manager</h3>
             <%= form_for [@league, @manager], remote: true do |f| %>
              <div class="form-group">
             		 <%= f.text_field :name, class: "form-control input-lg", placeholder: "Name" %>
              </div>
              <div class="form-group">
                <%= f.text_field :email, class: "form-control input-lg", placeholder: "Email" %>
              </div>
              <div class="form-group">
                <%= f.text_field :phone_number, class: "form-control input-lg", placeholder: "Phone Number" %>
              </div>
                <%= f.submit "Create Manager", class: "btn btn-d btn-circle btn-lg" %>
              <% end %>
             	</div>
           </div>

       </div>

     </div>

   </section>
